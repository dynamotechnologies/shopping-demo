.content-container{
  padding: 30px 0px 40px 0px;

}

.text-container{
  margin: 0px 75px 20px 75px;
  padding: 20px;
  background-color: #ffffff;
  -webkit-border-radius: 5px 5px 5px 5px;
  -webkit-box-shadow: 3px 3px 5px 6px #ccc;  /* Safari 3-4, iOS 4.0.2 - 4.2, Android 2.3+ */
  -moz-box-shadow:    3px 3px 5px 6px #ccc;  /* Firefox 3.5 - 3.6 */
  box-shadow:         1px 2px 5px 1px #ccc;
}

.login-text-container{
  margin-left: auto;
  margin-right: auto;
  width:300px;
  padding: 20px;
  background-color: #ffffff;
  -webkit-border-radius: 5px 5px 5px 5px;
  -webkit-box-shadow: 3px 3px 5px 6px #ccc;  /* Safari 3-4, iOS 4.0.2 - 4.2, Android 2.3+ */
  -moz-box-shadow:    3px 3px 5px 6px #ccc;  /* Firefox 3.5 - 3.6 */
  box-shadow:         1px 2px 5px 1px #ccc;

  input{
    display: block;
    width: 100%;
    padding: 5px;
    margin-bottom: 12px;
  }
}

@media (max-width: $viewport-xs) {
  .text-container{
    margin: 0px 10px;
  }


}

h1{
  margin-top: 5px;
  font-size: 20px;
}

h2{
  margin-top: 5px;
  font-size: 18px;
}

h3{
  margin-top: 3px;
  font-size: 16px;
}

body{
  background: url(<%= asset_path 'grey/grey.png'%>) repeat;

}


